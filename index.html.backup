                    placeholder="أدخل محافظة الميلاد"
                  />
                </div>
              </div>
            </div>
          </div>
          
          <button type="button" class="btn btn-secondary" onclick="addChildEntry()" style="margin-top: 15px;">+ إضافة ابن آخر</button>

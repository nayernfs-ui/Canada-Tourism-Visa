        <!-- Children Information Section -->
        <fieldset id="childrenInfo" class="form-section">
          <legend class="section-title">معلومات الأبناء</legend>

          <div class="question-group">
            <label>لو هناك أبناء <span class="required">*</span></label>
            
            <div id="childrenContainer">
              <div class="child-entry">
                <div class="child-entry-header">
                  <h4>الابن 1</h4>
                  <button type="button" class="btn-remove-child" onclick="removeChildEntry(this)" style="display: none;">حذف</button>
                </div>

                <div class="question-group">
                  <label for="childName">اسم الابن</label>
                  <input
                    type="text"
                    class="childName"
                    name="Child_Name_1"
                    placeholder="أدخل اسم الابن"
                  />
                </div>

                <div class="question-group">
                  <label>تاريخ الميلاد (يوم - شهر - سنة)</label>
                  <div class="date-row-small">
                    <input
                      type="number"
                      name="Child_Birth_Day_1"
                      placeholder="يوم"
                      min="1"
                      max="31"
                    />
